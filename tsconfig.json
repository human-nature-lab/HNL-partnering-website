{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es2015", "es2017", "dom"],
    "types": [
      "vue-meta",
      "webpack-env"
    ]
  },
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  },
  "include": [
    "./src/**/*"
  ]
}